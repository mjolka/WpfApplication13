<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:WpfApplication13.ViewModels"
        x:Class="WpfApplication13.Views.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Button Content="Options" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="5" Command="{Binding OpenOptionsCommand}"/>
    </Grid>
</Window>
